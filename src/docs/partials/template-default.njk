<!doctype html>
<html lang="en-US" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>{{ package.name }} - {{ package.description }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/hyper-reset-css/dist/reset.min.css"/>
    <link rel="stylesheet" href="https://unpkg.com/hyper-properties-css/dist/properties.min.css"/>
    <link rel="stylesheet" href="{{ baseURL }}/{{ package.keyword }}.min.css?t={{ timestamp }}"/>
  </head>
  <body>

    {% include "component-header-default.njk" %}

    {% block content %}
      {# content will be injected here #}
    {% endblock %}

    {% include "component-footer-default.njk" %}

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/anchor-js/3.2.1/anchor.min.js"></script>
    <script type="text/javascript">
      anchors.options = {placement:'left', icon: '#'};
      anchors.add('h1[id],h2[id],h3[id]');
    </script>
    <style>.anchorjs-link:hover{border:0;text-decoration:none;}</style>

  </body>
</html>
